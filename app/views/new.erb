<!DOCTYPE hmtl>
<h2>Create Recipe </h2>
  <form method="POST" action="/recipes">
    <div>
      <label>Name</label>
      <input type="text" name="recipe[name]"></input>
    </div>
    <div>
      <label>Ingredients</label>
      <input type="text" name="recipe[ingredients]"></input>
    </div>
    <div>
      <label>Cook Time</label>
      <input type="text" name="recipe[cook_time]"></input>
    </div>
    <input type="submit"/>
  </form>
