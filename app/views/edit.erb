<!DOCTYPE hmtl>
<body>
<h2>Edit Recipe </h2>

  <p> <%= @recipe.ingredients %> </p>


  <form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" name="_method" value="PATCH" />
    <div>
      <label>Name</label>
      <input type="text" name="recipe[name]" value="<%= @recipe.name %>"></input>
    </div>
    <div>
      <label>Ingredients</label>
      <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"></input>
    <div>
      <label>Cook Time</label>
      <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"></input>
    </div>
    <input type="submit"/>
  </form>
</body>
