<h2>Edit Recipe</h2>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" name="_method" value="PATCH" />
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= @recipe.name %>"></input>
    </div>
    <div>
        <label>Ingredients</label>
        <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></input>
    </div>
    <div>
        <label>Cook time</label>
        <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></input>
    </div>
    <input type="submit"/>
</form>
